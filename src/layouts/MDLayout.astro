---
// secondary layout for the blog/instruction posts; does a lot
// first adds baselayout, then imports "fenced code copy button" layout/function
// then most of code is the tags & tag links, of which I'm not sure I need/want

import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;

import CopyLayout from './CopyLayout.astro';
---

<BaseLayout pageTitle={frontmatter.title}>
<CopyLayout>

<style>
    a {
      color: #00539F;
    }
    .tags {
      display: flex;
      flex-wrap: wrap;
    }
    .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #F8FCFD;
    }
</style>

<div class="tags">
    {frontmatter.tags.map((tag) => (
    <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
</div>
    
<p>Published on {frontmatter.pubDate}</p>
<p><em>{frontmatter.description}</em></p>

<br>
<slot />

</CopyLayout>
</BaseLayout>



  